<Window x:Class="lab1.LightingConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab1"
        mc:Ignorable="d"
        Title="Lighting settings" Height="400" Width="500"
        ResizeMode="NoResize"
        Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <ListBox x:Name="LightsListBox" Margin="10" VerticalAlignment="Top" Height="330" SelectionChanged="LightsListBox_SelectionChanged"/>
            <Button Content="Add new lamp" Margin="10" VerticalAlignment="Bottom" Click="Button_Click"/>
        </Grid>
        <Grid Grid.Column="1">
            <Label Content="Name" VerticalAlignment="Top" Margin="10,5,10,0"/>
            <TextBox x:Name="LampName" VerticalAlignment="Top" Margin="10,28,10,0"/>
            
            <Label Content="Position (XYZ)" VerticalAlignment="Top" Margin="10,50,10,0"/>
            <TextBox x:Name="LampPos_X" VerticalAlignment="Top" Margin="10,72,165,0"/>
            <TextBox x:Name="LampPos_Y" VerticalAlignment="Top" Margin="78,72,78,0"/>
            <TextBox x:Name="LampPos_Z" VerticalAlignment="Top" Margin="165,72,10,0"/>

            <Label Content="Color (RGB)" VerticalAlignment="Top" Margin="10,98,10,0"/>
            <TextBox x:Name="LampCol_R" VerticalAlignment="Top" Margin="10,120,165,0"/>
            <TextBox x:Name="LampCol_G" VerticalAlignment="Top" Margin="78,120,78,0"/>
            <TextBox x:Name="LampCol_B" VerticalAlignment="Top" Margin="165,120,10,0"/>

            <Label Content="Intensity" VerticalAlignment="Top" Margin="10,145,10,0"/>
            <TextBox x:Name="LampInt" VerticalAlignment="Top" Margin="10,167,10,0"/>

            <Button Content="Save" VerticalAlignment="Top" Margin="10,200,10,0" Background="LightGreen" Click="Button_Click_2"/>
            <Button Content="Delete" VerticalAlignment="Top" Margin="10,230,10,0" Background="Tomato" Click="Button_Click_1"/>
        </Grid>
    </Grid>
</Window>
